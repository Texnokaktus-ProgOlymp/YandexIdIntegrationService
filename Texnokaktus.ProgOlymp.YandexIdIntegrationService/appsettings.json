{
    "Serilog": {
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "Microsoft.Hosting.Lifetime": "Information"
            }
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "{Timestamp:HH:mm:ss.fff K} [{Level:u3}] <{SourceContext}> {Message:lj} {NewLine}{Exception}"
                }
            }
        ],
        "Enrich": [
            "FromLogContext",
            "WithThreadId",
            "WithExceptionDetails",
            "WithEnvironmentName",
            "WithAssemblyName",
            "WithMachineName"
        ]
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "DefaultRedis": "host.docker.internal"
    },
    "Kestrel": {
        "Endpoints": {
            "Grpc": {
                "Url": "http://0.0.0.0:8081",
                "Protocols": "Http2"
            },
            "Http": {
                "Url": "http://0.0.0.0:8080",
                "Protocols": "Http1"
            }
        }
    }
}
